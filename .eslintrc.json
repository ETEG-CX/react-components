{
  "extends": [
    "@zendeskgarden",
    "@zendeskgarden/eslint-config/plugins/notice",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "jest": true,
    "BASE_PATH_NAME": true,
    "PACKAGE_VERSION": true
  },
  "plugins": ["react-hooks"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "sort-imports": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "jest/no-conditional-expect": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["./tsconfig.json"]
      },
      "extends": [
        "@zendeskgarden/eslint-config/plugins/typescript",
        "prettier/@typescript-eslint"
      ],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "react/prop-types": "off"
      }
    },
    {
      "files": ["packages/**/*.{js,ts,tsx}"],
      "excludedFiles": ["packages/**/*.spec.{js,ts,tsx}"],
      "plugins": ["garden-local"],
      "rules": {
        "garden-local/require-default-theme": "error"
      }
    }
  ]
}
